<html>
  <head>
    <meta charset="utf-8" />
    <title>UA Movie - Select Time></title>
  </head>
  <body>
    <center><h1>Select Time</h1></center>
      <% if (rows.length == 0) { %>
        <p>
        None for this time
      </p>
      <% } %>
      <% if (rows.length > 0) { %>
        <table>
          <% for (var i = 0; i < rows.length; i++){ %>
            <tr>
              <td>
                <input type = "radio" name = "rows[i]['Showtime']" >
              </td>
              <td>
              <%= rows[i]['Showtime'] %>
              </td>
            </tr>
          <% } %>
        </table>
      <% } %>
    <form method = "post">
      <% if (rows.length == 0) { %>
        <button type = "submit" formaction = "/back-showtimes">Back</button>
      <% } %>
      <% if (rows.length > 0) { %>
        <button type = "submit" formaction = "/buy">Buy</button>
      <% } %>
    </form>
  </body>
</html>
