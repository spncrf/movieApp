<html>
  <head>
    <meta charset="utf-8" />
    <title>UA Movie - <%= username %> Payment Info</title>
    <link rel = "stylesheet" href = "/styles.css">
  </head>
  <body>
    <form method = "post">
    <h1><center>Payment Information</center></h1>
<% if (payment.length != 0) { %>
  <table>
    <tr>
      <th>
        Select
      </th>
      <th>
        Card Number
      </th>
      <th>
        Name on Card
      </th>
      <th>
        Expiration Date
      </th>
    </tr>
  <% for (var i = 0; i < payment.length; i++){ %>
    <tr>
      <td>
        <input type = "radio" name = "select" value = "<%= payment[i]['CardNo'] %>">
      </td>
      <td>
        <%= payment[i]['CardNo'] %>
      </td>
      <td>
        <%= payment[i]['Name'] %>
      </td>
      <td>
        <%= payment[i]['Expiration'] %>
      </td>
    </tr>
  <% }; %>
</table>
  <% } %>
  <% if (payment.length == 0) { %>
    <p>No Payment Information</p>
  <% } %>
  <% if (payment.length != 0){ %>
    <button type = "submit" formaction = "/delete-payment">Delete</button>
<%  } %>
  <button type = "submit" formaction = "/back-me">Back</button>
</form>
</body>
</html>
